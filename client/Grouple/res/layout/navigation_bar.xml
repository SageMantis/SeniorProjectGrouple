<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendRequestGridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:columnCount="4"
    android:rowCount="1" >
    
   <Button
        android:id="@+id/homeButton"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginTop="365dp"
       	android:background="@drawable/home_icon" />

    <Button
        android:id="@+id/userButton"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@drawable/user_icon"
        android:onClick="startUserActivity" />

    <Button
        android:id="@+id/groupsButton"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@drawable/groups_icon"
       	android:onClick="startGroupsActivity" />

    <Button
        android:id="@+id/eventsButton"
		android:layout_column="3"
        android:layout_row="0"
        android:background="@drawable/events_icon"
        android:onClick="startEventsActivity" />

</GridLayout>
