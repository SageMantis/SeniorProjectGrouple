<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:id="@+id/eventsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
	android:background="@color/background_color" >

	<Button
	    android:id="@+id/eventsUpcomingButtonEA"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/eventCreateButtonEA"
	    android:layout_marginTop="14dp"
	    android:background="@drawable/button_border"
	    android:fontFamily="sans-serif-condensed"
	    android:onClick="startEventsUpcomingActivity"
	    android:text="Upcoming Events"
	    android:textColor="@color/button_text_color"
	    android:textSize="20sp" />
	
		<Button
	    android:id="@+id/eventsPendingButtonEA"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/eventsUpcomingButtonEA"
	    android:layout_marginTop="16dp"
	    android:background="@drawable/button_border"
	    android:fontFamily="sans-serif-condensed"
	    android:onClick="startEventInvitesActivity"
	    android:text="Event Invites"
	    android:textColor="@color/button_text_color"
	    android:textSize="20sp" />

	<Button
	    android:id="@+id/eventInvitesButtonEA"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/eventsPendingButtonEA"
	    android:layout_marginTop="16dp"
	    android:background="@drawable/button_border"
	    android:fontFamily="sans-serif-condensed"
	    android:onClick="startEventInvitesActivity"
	    android:text="Event Invites"
	    android:textColor="@color/button_text_color"
	    android:textSize="20sp" />

	<Button
	    android:id="@+id/eventCreateButtonEA"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_alignLeft="@+id/eventsUpcomingButtonEA"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="41dp"
	    android:background="@drawable/button_border"
	    android:fontFamily="sans-serif-condensed"
	    android:onClick="startEventsCreateActivity"
	    android:text="Create Event"
	    android:textColor="@color/button_text_color"
	    android:textSize="20sp" />

</RelativeLayout>