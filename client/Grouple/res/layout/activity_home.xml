<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="5dp" >

      	<GridLayout
      	    android:id="@+id/navigationBarGridLayout"
      	    android:layout_width="match_parent"
      	    android:layout_height="wrap_content"
      	    android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true"
      	    android:columnCount="3"
      	    android:gravity="center"
      	    android:layout_gravity="center"
      	    android:padding="0dp"
      	    android:rowCount="3" >

      	    <Button
      	        android:id="@+id/friendsButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="0"
      	        android:layout_margin="8dp"
      	        android:layout_row="1"
      	        android:background="@drawable/friends_button_border"

      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Friends"
      	        android:textColor="@color/header_text_color"
      	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:textSize="16sp" />

      	    <Button
      	        android:id="@+id/messagesButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="1"
      	        android:layout_margin="8dp"
      	        android:layout_row="0"
      	        android:background="@drawable/messages_button_border"
      	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Messages"
      	        android:textColor="@color/header_text_color"
      	        android:textSize="16sp" />

      	    <Button
      	        android:id="@+id/settingsButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="2"
      	        android:layout_margin="8dp"
      	        android:layout_row="0"
      	        android:background="@drawable/settings_button_border"
      	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Settings"
      	        android:textColor="@color/header_text_color"
      	        android:textSize="16sp" />
      	    
      	    <Button
      	        android:id="@+id/groupsButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="1"
      	        android:layout_margin="8dp"
      	        android:layout_row="1"
      	        android:background="@drawable/groups_button_border"
      	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Groups"
      	        android:textColor="@color/header_text_color"
      	        android:textSize="16sp" />

      	    <Button
      	        android:id="@+id/userButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="0"
      	        android:layout_margin="8dp"
      	        android:layout_row="0"
      	        android:background="@drawable/user_button_border"
      	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Profile"
      	        android:textColor="@color/white"

      	        android:textSize="16sp" />

      	    <!-- TextView
      	        android:id="@+id/userNotificationTextView"
      	        android:layout_width="16dp"
      	        android:layout_height="16dp"
      	        android:layout_column="1"
      	        android:layout_gravity="center_horizontal|top"
      	        android:layout_row="2"
      	        android:background="@drawable/notification_icon"
      	        android:gravity="center"
      	        android:textAppearance="?android:attr/textAppearanceSmall"
      	        android:textColor="#FFFFFF"
      	        android:visibility="invisible" /> -->

      	    <Button
      	        android:id="@+id/eventsButtonHA"
      	        android:layout_width="100dp"
      	        android:layout_height="100dp"
      	        android:layout_column="2"
      	        android:layout_margin="8dp"
      	        android:layout_row="1"
      	        android:background="@drawable/events_button_border"
        	        android:textStyle="bold"
      	              	        android:fontFamily="sans-serif"
      	        android:gravity="bottom|center_horizontal"
      	        android:onClick="navigate"
      	        android:text="Events"
      	        android:textColor="@color/header_text_color"
      	        android:textSize="16sp" />

      	</GridLayout>

      	<ImageView
      	    android:id="@+id/homeIconImageViewHA"
      	    android:layout_width="400dp"
      	    android:layout_height="wrap_content"
      	    android:layout_alignParentLeft="true"
      	    android:layout_alignParentTop="true"
      	    android:contentDescription="Home Icon"
      	    android:gravity="center"
      	    android:src="@drawable/home_logo_blue"
      	    android:visibility="visible" />

</RelativeLayout>