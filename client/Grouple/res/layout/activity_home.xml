<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="5dp" >

  	<ImageView
		android:id="@+id/homeLogoImageViewHA"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="30dp"
	    android:layout_marginLeft="30dp"
	    android:layout_marginTop="5dp"
	    android:contentDescription="test"
	    android:gravity="center"
	    android:src="@drawable/home_logo_blue"
	    android:layout_weight="2"
	    android:visibility="visible" />
      
	<LinearLayout
  	    android:id="@+id/topRowNavLayoutHA"
  	    android:orientation="horizontal"
  	    android:layout_gravity="bottom"
  	    android:layout_weight="1"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content" >
      	    
      	    
 	    <Button
 	          	        android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
 	        android:id="@+id/userButtonHA"
 	        android:layout_column="0"
 	        android:layout_weight="1"
 	        android:background="@drawable/user_button_border"
 	        android:textStyle="bold"
 	        android:fontFamily="sans-serif"
 	        android:paddingBottom="10dp"
 	        android:gravity="bottom|center_horizontal"
 	        android:onClick="navigate"
 	        android:text="Profile"
 	        android:textColor="@color/header_text_color"
 	        android:textSize="16sp" />
 	    
 		<Button
 		   	android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
 	        android:id="@+id/messagesButtonHA"		
 	        android:paddingBottom="10dp"
 	        android:background="@drawable/messages_button_border"
 	        android:textStyle="bold"
 	        android:layout_weight="1"
 	       	android:fontFamily="sans-serif"
 	        android:gravity="bottom|center_horizontal"
 	        android:onClick="navigate"
 	        android:text="Messages"
 	        android:textColor="@color/header_text_color"
 	        android:textSize="16sp" />

 	    <Button
 	          	        android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
 	        android:id="@+id/settingsButtonHA"
 	        android:layout_weight="1"
 	       	android:paddingBottom="10dp"
 	        android:background="@drawable/settings_button_border"
 	        android:textStyle="bold"
 	     	android:fontFamily="sans-serif"
 	        android:gravity="bottom|center_horizontal"
 	        android:onClick="navigate"
 	        android:text="Settings"
 	        android:textColor="@color/header_text_color"
 	        android:textSize="16sp" />

 	</LinearLayout>
      	
      	
   	<LinearLayout
   	    android:id="@+id/bottRowNavLayoutHA"
   	    android:orientation="horizontal"
   	    android:layout_weight="1"
   	    android:layout_gravity="bottom"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content" >
    	
    	<Button
    	   	android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
   	        android:id="@+id/friendsButtonHA"
   	        android:layout_weight="1"
   	        android:background="@drawable/friends_button_border"
   	        android:paddingBottom="10dp"
   	        android:gravity="bottom|center_horizontal"
   	        android:onClick="navigate"
   	        android:text="Friends"
   	        android:textColor="@color/header_text_color"
   	        android:textStyle="bold"
   	       	android:fontFamily="sans-serif"
   	        android:textSize="16sp" />


  	    
  	    <Button
  	       	android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
  	        android:id="@+id/groupsButtonHA"
  	        android:layout_weight="1"
  	        android:background="@drawable/groups_button_border"
  	        android:textStyle="bold"
  	        android:fontFamily="sans-serif"
  	        android:gravity="bottom|center_horizontal"
  	        android:onClick="navigate"
  	     	android:paddingBottom="10dp"
  	        android:text="Groups"
  	        android:textColor="@color/header_text_color"
  	        android:textSize="16sp" />


  	    <!-- TextView
  	        android:id="@+id/userNotificationTextView"
  	        android:layout_width="16dp"
  	        android:layout_height="16dp"
  	        android:layout_column="1"
  	        android:layout_gravity="center_horizontal|top"
  	        android:layout_row="2"
  	        android:background="@drawable/notification_icon"
  	        android:gravity="center"
  	        android:textAppearance="?android:attr/textAppearanceSmall"
  	        android:textColor="#FFFFFF"
  	        android:visibility="invisible" /> -->

 		<Button
  	        android:id="@+id/eventsButtonHA"
  	        android:layout_weight="1"
  	        android:layout_height="wrap_content"
  	        android:layout_width="wrap_content"
  	        android:background="@drawable/events_button_border"
      	    android:textStyle="bold"
  	        android:fontFamily="sans-serif"
  	        android:gravity="bottom|center_horizontal"
  	        android:onClick="navigate"
  	        android:text="Events"
  	        android:textColor="@color/header_text_color"
  	        android:paddingBottom="10dp"
  	        android:textSize="16sp" />

	</LinearLayout>

</LinearLayout>