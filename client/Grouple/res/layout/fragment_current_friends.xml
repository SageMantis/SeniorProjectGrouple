<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currentFriendsRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs460.grouple.grouple.CurrentFriendsActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Current Friends"
        android:textSize="24sp" />

    <GridLayout
   		android:id="@+id/navigationBarGridLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="400dp"
	    android:layout_marginBottom="0dp"
	    
	    android:padding="0dp"
	    android:columnCount="4"
	    android:rowCount="1" >
	    
	  	<Button
	        android:id="@+id/homeButton"
	        android:padding="0dp"
	        android:layout_column="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	       	android:layout_margin="3dp"
	       	android:layout_marginLeft="10dp"
	        android:onClick="startHomeActivity"
	       	android:background="@drawable/home_icon" />
	
	    <Button
	        android:id="@+id/groupsButton"
	        android:layout_column="2"
	        android:layout_gravity="center_horizontal"
	        android:padding="0dp"
	        android:layout_row="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
	        android:background="@drawable/groups_icon"
	       	android:onClick="startGroupsActivity" />
	
	    <Button
	        android:id="@+id/eventsButton"
			android:layout_column="3"
			android:padding="0dp"
			android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
			android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/events_icon"
	        android:onClick="startEventsActivity" />

	    <Button
	        android:id="@+id/userButton"
	      	android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_column="1"
	       	android:layout_margin="3dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/user_icon"
	        android:padding="0dp"
	          android:onClick="startUserActivity" />
	    
	</GridLayout>

</RelativeLayout>
