<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupRequestGridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bottom_border"
    android:columnCount="3"
    android:rowCount="1" >

    <Button
        android:id="@+id/emailTextViewGRLI"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_row="0"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:text="Sample"
        android:textColor="@color/text_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/declineGroupRequestButtonGRLI"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:background="@drawable/decline_button_border"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Decline"
        android:textColor="@color/button_text_color" />

    <Button
        android:id="@+id/acceptGroupRequestButtonGRLI"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="5dp"
        android:layout_marginRight="70dp"
        android:layout_row="0"
        android:background="@drawable/accept_button_border"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Accept"
        android:textColor="@color/button_text_color" />

</GridLayout>