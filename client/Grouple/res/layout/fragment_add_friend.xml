<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:visibility="visible"
    tools:context="cs460.grouple.grouple.AddFriendActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/emailEditTextAFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Enter User&apos;s Email"
        android:inputType="textEmailAddress" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/addFriendButtonAFA"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/emailEditTextAFA"
        android:layout_alignRight="@+id/emailEditTextAFA"
        android:layout_below="@+id/emailEditTextAFA"
        android:onClick="addFriendButton"
        android:text="Add" />

    <TextView
        android:id="@+id/addFriendTextViewAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Add Friend"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/addFriendMessageTextViewAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFriendButtonAFA"
        android:layout_centerHorizontal="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />
    
    <GridLayout
   		android:id="@+id/navigationBarGridLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="400dp"
	    android:layout_marginBottom="0dp"
	    
	    android:padding="0dp"
	    android:columnCount="4"
	    android:rowCount="1" >
	    
	  	<Button
	        android:id="@+id/homeButton"
	        android:padding="0dp"
	        android:layout_column="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	       	android:layout_margin="3dp"
	       	android:layout_marginLeft="10dp"
	        android:onClick="startHomeActivity"
	       	android:background="@drawable/home_icon" />
	
	    <Button
	        android:id="@+id/groupsButton"
	        android:layout_column="2"
	        android:layout_gravity="center_horizontal"
	        android:padding="0dp"
	        android:layout_row="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
	        android:background="@drawable/groups_icon"
	       	android:onClick="startGroupsActivity" />
	
	    <Button
	        android:id="@+id/eventsButton"
			android:layout_column="3"
			android:padding="0dp"
			android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
			android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/events_icon"
	        android:onClick="startEventsActivity" />

	    <Button
	        android:id="@+id/userButton"
	      	android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_column="1"
	       	android:layout_margin="3dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/user_icon"
	        android:onClick="startUserActivity"
	        android:padding="0dp" />
	    
	</GridLayout>

</RelativeLayout>