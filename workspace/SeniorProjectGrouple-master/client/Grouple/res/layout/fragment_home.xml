<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:padding="0dp"
    tools:context="cs460.grouple.grouple.HomeActivity$PlaceholderFragment" >

   <ImageView
       android:id="@+id/homeIconImageViewHA"
       android:layout_width="400dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="-240dp"
       android:contentDescription="Home Icon"
       android:src="@drawable/home_logo" />

      	<GridLayout
   		android:id="@+id/navigationBarGridLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="400dp"
	    android:layout_marginBottom="0dp"
	    android:padding="0dp"
	    android:columnCount="4"
	    android:rowCount="1" >
	    
     	<Button
	        android:id="@+id/homeButton"
	        android:padding="0dp"
	        android:layout_column="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	       	android:layout_margin="3dp"
	       	android:layout_marginLeft="10dp"
	       	android:background="@drawable/home_icon" />
	
	    <Button
	        android:id="@+id/groupsButton"
	        android:layout_column="2"
	        android:layout_gravity="center_horizontal"
	        android:padding="0dp"
	        android:layout_row="0"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
	        android:background="@drawable/groups_icon"
	       	android:onClick="startGroupsActivity" />
	
	    <Button
	        android:id="@+id/eventsButton"
			android:layout_column="3"
			android:padding="0dp"
			android:layout_width="80dp"
	        android:layout_height="80dp"
	       	android:layout_margin="3dp"
			android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/events_icon"
	        android:onClick="startEventsActivity" />

	    <Button
	        android:id="@+id/userButton"
	      	android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_column="1"
	       	android:layout_margin="3dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_row="0"
	        android:background="@drawable/user_icon"
	        android:padding="0dp"
	        android:onClick="startUserActivity" />
	    
	</GridLayout>
</RelativeLayout>