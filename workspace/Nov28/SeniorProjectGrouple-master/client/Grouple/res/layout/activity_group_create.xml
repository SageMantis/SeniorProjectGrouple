<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cs460.grouple.grouple.GroupCreateActivity"
    android:id="@+id/groupCreateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="0dp" >
    
    <ScrollView
        android:id="@+id/scrollViewPickMembers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/linearLayoutNested1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutAddMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scrollViewPickMembers"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddGroup" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewPickedMembers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/linearLayoutNested2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/linearLayoutFinalize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scrollViewPickedMembers"
        android:orientation="vertical" >
        
        <Button 
            android:id="@+id/button2" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/Confirm"/>
    </LinearLayout>
       
</RelativeLayout>
